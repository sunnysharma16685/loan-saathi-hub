# ------------------------
# Django
# ------------------------
DJANGO_SECRET_KEY=your-django-secret-key
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,loan-saathi-hub.onrender.com,www.loansaathihub.in,loansaathihub.in

# ------------------------
# Database (Supabase Postgres)
# ------------------------
# Full connection string (Render/Supabase के लिए recommended)
DATABASE_URL=postgresql://postgres:yourpassword@your-host.supabase.co:5432/postgres

# Optional (अगर अलग-अलग values से config करना चाहो)
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_HOST=your-host.supabase.co
DB_PORT=5432

# ------------------------
# Supabase
# ------------------------
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ------------------------
# Email (Production)
# ------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@example.com

# ------------------------
# Security
# ------------------------
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
X_FRAME_OPTIONS=DENY
