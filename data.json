<script>
function loginUser(event) {
  event.preventDefault();

  const email = document.getElementById("loginEmail").value.trim();
  const password = document.getElementById("loginPassword").value.trim();

  if (!email || !password) {
    alert("कृपया ईमेल और पासवर्ड भरें।");
    return;
  }

  // Simulated login check — replace with real backend logic
  const storedUsers = JSON.parse(localStorage.getItem("users")) || [];
  const matchedUser = storedUsers.find(user => user.email === email);

  if (matchedUser) {
    alert("लॉगिन सफल रहा! आपका स्वागत है " + matchedUser.first_name + " जी");
    // Store user session (basic simulation)
    localStorage.setItem("currentUser", JSON.stringify(matchedUser));
    window.location.href = "dashboard.html";
  } else {
    alert("गलत ईमेल या पासवर्ड। कृपया फिर से प्रयास करें।");
  }
}
</script>
