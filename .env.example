# =====================================================
# 🔹 DJANGO CONFIGURATION
# =====================================================
DJANGO_SECRET_KEY=your-django-secret-key
DJANGO_DEBUG=1                     # 1 for local | 0 for Render
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,loan-saathi-hub.onrender.com,www.loansaathihub.in,loansaathihub.in

# =====================================================
# 🔹 DATABASE SETTINGS
# =====================================================

# 🧩 Local PostgreSQL (Recommended for dev)
# Example: postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql://postgres:YourLocalPassword@localhost:5432/loansaathi

# 🌐 Render PostgreSQL (Production)
# When deploying, set this in Render Dashboard > Environment:
# DATABASE_URL=postgresql://<render_user>:<render_pass>@<render_host>:5432/<render_db>?sslmode=require

# =====================================================
# 🔹 EMAIL (Production-ready, works for Gmail SMTP)
# =====================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=loansaathihub@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=loansaathihub@gmail.com

# For local testing (optional override)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =====================================================
# 🔹 SECURITY SETTINGS
# =====================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
X_FRAME_OPTIONS=DENY

# =====================================================
# 🔹 OPTIONAL SERVICES
# =====================================================
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# =====================================================
# 🔹 SITE & RAZORPAY
# =====================================================
SITE_URL=https://www.loansaathihub.in
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
